{
  "model": {
    "chatCompression": {
      "contextPercentageThreshold": 0.6
    }
  },
  "general": {
    "checkpointing": {
      "enabled": true
    },
    "preferredEditor": "vscode"
  },
  "context": {
    "fileName": "AGENT.md",
    "fileFiltering": {
      "respectGitIgnore": true
    }
  },
  "mcpServers": {
    "nuxt": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://mcp.nuxt.com/sse"
      ]
    }
  },
  "tools": {
    "useRipgrep": true
  }
}
