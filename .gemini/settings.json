{
  "model": {
    "chatCompression": {
      "contextPercentageThreshold": 0.6
    }
  },
  "general": {
    "checkpointing": {
      "enabled": true
    },
    "preferredEditor": "vscode"
  },
  "context": {
    "fileName": "AGENT.md",
    "fileFiltering": {
      "respectGitIgnore": true
    }
  },
  "mcpServers": {
    "nuxt": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://mcp.nuxt.com/sse"
      ]
    },
    "nuxt-ui": {
      "type": "http",
      "url": "https://ui4.nuxt.com/mcp"
    },
    "bun-dev": {
        "command": "bun",
        "args": [
            "/home/stevan/projects/AI/mcp/mcp-bun/dist/mcp=bun.js"
        ],
        "env": {
            "DISABLE_NOTIFICATIONS": "true"
        }
    }
  },
  "tools": {
    "useRipgrep": true
  }
}
