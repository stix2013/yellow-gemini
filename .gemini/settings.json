{
  "chatCompression": {
    "contextPercentageThreshold": 0.6
  },
  "checkpointing": {
    "enabled": true
  },
  "contextFileName": "AGENT.md",
  "fileFiltering": {
    "respectGitIgnore": true
  },
  "mcpServers": {
    "nuxt": {
      "command": "npx",
      "args": ["mcp-remote", "https://mcp.nuxt.com/sse"]
    },
    "nuxt-ui": {
      "type": "http",
      "url": "https://ui4.nuxt.com/mcp"
    }
  },
  "preferredEditor": "vscode",
  "useRipgrep": true
}
